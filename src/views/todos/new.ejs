<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Todo</title>
    <style>
        .todo-container {
            width: 80%;
            max-width: 400px;
            margin: 0 auto;
            padding-top: 50px;
        }

        .todo-container h2 {
            color: #333;
            text-align: center;
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        input[type="text"],
        select,
        button {
            padding: 10px;
            margin-bottom: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
        }

        button {
            background-color: #5cb85c;
            color: white;
            cursor: pointer;
        }

        button:hover {
            background-color: #4cae4c;
        }
    </style>
</head>

<body>
    <div class="todo-container">
        <h2>Add New Todo</h2>
        <form action="/todos" method="POST">
            <!-- User Dropdown -->
            <select name="user_id" required>
                <!-- Server-side code should generate these options -->
                <% users.forEach(function(user) { %>
                    <option value="<%= user.id %>">
                        <%= user.name %>
                    </option>
                    <% }); %>
            </select>
            <!-- Todo Title -->
            <input type="text" name="title" placeholder="Todo title" required>
            <!-- Submit Button -->
            <button type="submit">Add</button>
        </form>
    </div>
</body>

</html>